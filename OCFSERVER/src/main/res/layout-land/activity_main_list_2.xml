<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".recyclerview.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:layout_height="match_parent">


            <ListView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:listSelector="#0af91e"
                android:id="@+id/listview"
                android:divider="#0a41f5"
                android:dividerHeight="1.5dp"
                android:choiceMode="singleChoice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>


        </LinearLayout>

        <View
            android:background="#0a41f5"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:weightSum="10"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:weightSum="10"
                android:layout_height="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent">

                    <ListView
                        android:listSelector="#cf4bff"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/ocfmenulist"
                        android:divider="#0d0d0d"
                        android:dividerHeight="1.5dp"
                        android:choiceMode="singleChoice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></ListView>


                </LinearLayout>

                <View
                    android:background="#0a41f5"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    />

                <LinearLayout
                    android:background="#e2fad2"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_margin="20dp"
                        android:src="@drawable/img_smartplug"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:background="#0a41f5"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="0dp">

                <ScrollView
                    android:background="#eaf1a1"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:id="@+id/scrollView">
                    <TextView
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0e0e0e"
                        android:textSize="10sp"
                        android:id="@+id/consoleTextView" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>