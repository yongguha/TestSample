            <Button
                	android:id="@+id/btn_ok"
                    android:layout_width="@dimen/pw_btn_ok_width"
                    android:layout_height="@dimen/pw_btn_ok_height"
                    android:layout_marginTop="@dimen/pw_btn_ok_layout_marginTop"
                    android:gravity="center"
                    android:background="@drawable/pw_btn_ok_shape"
