<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MyOCFServer">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:layout_height="match_parent">


            <ListView
                android:background="#00ff0000"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:listSelector="@android:color/transparent"
                android:id="@+id/listview"
                android:divider="#595a5b"
                android:dividerHeight="1dp"
                android:choiceMode="singleChoice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:weightSum="2"
        android:background="#AAAAA2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:background="#D2BD7E"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ListView
                    android:background="#00ff0000"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="0dp"
                    android:listSelector="@android:color/transparent"
                    android:id="@+id/sublistview"
                    android:divider="#595a5b"
                    android:dividerHeight="1dp"
                    android:choiceMode="singleChoice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>


            </LinearLayout>

            <LinearLayout
                android:background="#55A3E1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_margin="20dp"
                    android:src="@drawable/img_smartplug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:background="#ADE3B0"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ScrollView
                android:background="#a4a4a2"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:id="@+id/scrollView">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0e0e0e"
                        android:textSize="10sp"
                        android:id="@+id/consoleTextView" />

                </LinearLayout>

            </ScrollView>


        </LinearLayout>



    </LinearLayout>



</LinearLayout>